<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Rabbit Filter</name>
    <author>Eugene K</author>
    <version>1.0.0</version>
    <description>Filter for vituemart products using rabbit LCF</description>
    <files>
        <filename>mod_rabbitfilter.xml</filename>
        <filename module="mod_rabbitfilter">mod_rabbitfilter.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
	
    <config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="option1"
						type="text"
						default="option 1"
						description="JFIELD_MOD_RABBITFILTER_OPTION1_DESC"
						label="JFIELD_MOD_RABBITFILTER_OPTION1_LABEL"
						size="5" />
				<!-- field
					   name="option2"
					   type="sql"
					   default="1"
					   label="Select a somewhat"
					   query="SELECT id AS value, lang FROM #__helloworld" / -->
			</fieldset>
		</fields>	
    </config>
</extension>