<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<!--
			enctype="multipart/form-data"
			method="post"
			See also https://docs.joomla.org/File_form_field_type, https://docs.joomla.org/Radio_form_field_type
		-->
		<field
				name="import_table"
				type="file"
				label="COM_RABBIT_RABBIT_FILE_LABEL"
				description="COM_RABBIT_RABBIT_FILE_DESC"
				size="64"
				class="inputbox"
				default=""
				/>
		<!-- Тип combo - это список, значениями которого являются строки - содержимое тегов option -->
		<field
				name="content_type"
				type="list"
				default="2"
				label="COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_LABEL"
				description="COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_DESC"
				>
					<option value="1">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_AUTO</option>
					<option value="2">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_CLOTHES</option>
					<option value="3">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_FABRICS</option>
					<option value="4">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_TEXTILE</option>
					<option value="101">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_TEST1</option>
					<option value="102">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_TEST2</option>
					<option value="253">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_SALES</option>
					<option value="254">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_ORDERS</option>
					<option value="255">COM_RABBIT_RABBIT_TABLE_CONTENTTYPE_USERS</option>
		</field>
		<field
				name="product_variant_def"
				type="list"
				label="COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_LABEL"
				description="COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_DESC"
				>
					<option value="255">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_DEFAULT</option>
					<option value="1">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_AUTO</option>
					<option value="2">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_SKUPARSING_1</option>
					<option value="3">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_SKUPARSING_2</option>
					<option value="4">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_SKUPARSING_3</option>
					<option value="11">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_SKULIST</option>
					<option value="12">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_CATEGOEYLIST</option>
					<option value="13">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_ANOTHERFIELDS</option>
					<option value="14">COM_RABBIT_RABBIT_TABLE_PRODUCTVARIANTDEF_ADDITIONALFIELDS</option>
		</field>
		<field
				name="convert_images"
				type="checkbox"
				label="COM_RABBIT_RABBIT_CONVERT_IMAGES_LABEL"
				description="COM_RABBIT_RABBIT_CONVERT_IMAGES_DESC"
				value="1"
				class="input-chbox"
				default="0"
				/>
		<field
				name="images_packed"
				type="checkbox"
				label="COM_RABBIT_RABBIT_IMAGES_PACKED_LABEL"
				description="COM_RABBIT_RABBIT_IMAGES_PACKED_DESC"
				value="1"
				class="input-chbox"
				default="0"
				/>
		<field
				name="images"
				type="file"
				label="COM_RABBIT_RABBIT_IMAGES_LABEL"
				description="COM_RABBIT_RABBIT_IMAGES_DESC"
				size="64"
				class="inputbox"
				default=""
				multiple="1"
				/>
		<field
				name="medi_images"
				type="file"
				label="COM_RABBIT_RABBIT_MEDIIMAGES_LABEL"
				description="COM_RABBIT_RABBIT_MEDIIMAGES_DESC"
				size="64"
				class="inputbox"
				default=""
				multiple="1"
				/>
		<field
				name="mini_images"
				type="file"
				label="COM_RABBIT_RABBIT_MINIIMAGES_LABEL"
				description="COM_RABBIT_RABBIT_MINIIMAGES_DESC"
				size="64"
				class="inputbox"
				default=""
				multiple="1"
				/>
		<field
				name="import_options"
				type="text"
				label="COM_RABBIT_RABBIT_OPTIONS_LABEL"
				description="COM_RABBIT_RABBIT_OPTIONS_DESC"
				size="64"
				class="inputbox"
				default=""
				/>
	</fieldset>

	<fields name="param">
		<fieldset name="settings">
			<field
					name="import_type"
					type="radio"
					label="COM_RABBIT_RABBIT_IMPORTTYPE_LABEL"
					description="COM_RABBIT_RABBIT_TABLE_IMPORTTYPE_DESC"
					default="0"
					>
						<option value="0">COM_RABBIT_RABBIT_TABLE_IMPORTTYPE_A</option>
						<option value="1">COM_RABBIT_RABBIT_TABLE_IMPORTTYPE_B</option>
						<option value="2">COM_RABBIT_RABBIT_TABLE_IMPORTTYPE_C</option>
			</field>
			<field
					name="userimport"
					type="checkbox"
					label="COM_RABBIT_RABBIT_USERIMPORT_LABEL"
					description="COM_RABBIT_RABBIT_USERIMPORT_DESC"
					value="1"
					class="input-chbox"
					default="0"
					/>
		</fieldset>
	</fields>
</form>